<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modalBottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/linearLayoutPadding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/linearLayoutMarginStart"
        android:layout_marginTop="@dimen/textViewMargin"
        android:layout_marginBottom="@dimen/textViewMargin"
        android:fontFamily="@string/app_name"
        android:text="@string/add_picture"
        android:textSize="@dimen/textViewSize" />

    <LinearLayout
        android:id="@+id/takePhoto"
        style="@style/LinearLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayoutLayoutHeight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_baseline_photo_camera_24"
            android:drawablePadding="@dimen/margin"
            android:text="@string/take_photo"
            tools:ignore="UseCompatTextViewDrawableXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/choseFromGallery"
        style="@style/LinearLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linearLayoutLayoutHeight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_baseline_photo_library_24"
            android:drawablePadding="@dimen/margin"
            android:text="@string/take_from_gallery"
            tools:ignore="UseCompatTextViewDrawableXml" />
    </LinearLayout>


</LinearLayout>